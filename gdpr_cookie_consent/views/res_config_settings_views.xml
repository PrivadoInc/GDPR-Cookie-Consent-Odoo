<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_privado_script_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.privado.script</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="google_maps_setting" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="privado_script_setting">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Privado's Cookie Script</span>
                        <span class="fa fa-lg fa-globe" title="Values set here are website-specific."
                              groups="website.group_multi_website"/>
                        <div class="text-muted">
                            Enter Privado's Script
                        </div>
                        <div class="content-group">
                            <div class="row ml-1 mt16">
                                <field name="privado_script_code_snippet" class="oe_inline" placeholder="Privado Cookie script"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
